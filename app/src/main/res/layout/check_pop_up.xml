<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/check_dialog"
    android:paddingHorizontal="10dp"
    android:paddingVertical="30dp"
    android:layout_gravity="center"
    >
    <EditText
        android:id="@+id/edit_to_do"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/big_note_shape"
        android:maxLines="2"
        android:minHeight="60dp"
        android:autofillHints="@string/new_task" />
    <LinearLayout
        android:id="@+id/todo_actions"
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_to_do"
        android:orientation="horizontal">

        <Button
            android:id="@+id/todo_to_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/next_btn"
            android:text="To top" />

        <Button
            android:id="@+id/todo_to_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/next_btn"
            android:layout_marginHorizontal="5dp"
            android:text="To end" />

        <Button
            android:id="@+id/todo_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff0fff"
            android:layout_marginHorizontal="5dp"
            android:text="delete" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todo_actions"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="5dp"
        android:text="@string/todo_submit"
        android:background="@drawable/next_btn"

        />
</RelativeLayout>